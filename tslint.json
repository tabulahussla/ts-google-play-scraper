{
	"defaultSeverity": "error",
	"extends": [
		"tslint:latest",
		"tslint-eslint-rules",
		"tslint-config-prettier"
	],
	"jsRules": {},
	"rules": {
		"object-literal-sort-keys": false,
		"no-submodule-imports": [true, "~", "#", "!"],
		"no-implicit-dependencies": [true, ["~", "#", "!"]],
		"trailing-comma": [
			true,
			{
				"multiline": {
					"objects": "always",
					"arrays": "always",
					"functions": "never",
					"typeLiterals": "ignore"
				},
				"esSpecCompliant": true
			}
		],
		"quotemark": [true, "double"]
	},
	"linterOptions": {
		"exclude": ["node_modules/**/*", "dist/**/*", "test/**/*"]
	},
	"rulesDirectory": []
}
